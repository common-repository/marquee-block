{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "storepress/marquee",
  "version": "1.0.3",
  "title": "Marquee",
  "category": "storepress",
  "description": "Marquee block is CSS based animation block to display scrolling text, images and any kinds of blocks horizontally and vertically.",
  "attributes": {
    "orientation": {
      "type": "string",
      "default": "x"
    },
    "direction": {
      "type": "string",
      "default": "left"
    },
    "pause": {
      "type": "boolean",
      "default": true
    },
    "animationSpeed": {
      "type": "integer",
      "default": 10
    },
    "gap": {
      "type": "integer",
      "default": 40
    },
    "overlay": {
      "type": "boolean",
      "default": false
    },
    "whiteSpaceNoWrap": {
      "type": "boolean",
      "default": false
    },
    "overlayColor": {
      "type": "string",
      "default": "#fff"
    }
  },
  "example": {},
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "marquee-block",
  "editorScript": "file:./index.js",
  "viewScript": "file:./view.js",
  "viewStyle": "file:./view.css",
  "render": "file:./render.php"
}